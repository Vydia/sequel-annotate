#!/usr/bin/env ruby
require 'rubygems'
require 'annotate-sequel'
begin
  require 'bundler'
  Bundler.setup
rescue Exception => e
  puts e.backtrace
end

here = File.expand_path(File.dirname __FILE__)
$:<< "#{here}/../lib"

target = {
  :klass => AnnotateSequel::Model,
  :task => :do_annotations,
}

Annotate.eager_load(options)
target[:klass].send(target[:task])
